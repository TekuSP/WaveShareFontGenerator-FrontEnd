<Window x:Class="WaveShareFontGenerator_FrontEnd.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WaveShareFontGenerator_FrontEnd"
        mc:Ignorable="d"
        Title="WaveShare E-Paper Font Generator" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50px"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Grid.Row="0">
            <Button x:Name="open" Margin="5">OPEN FONT FILE</Button>
            <TextBlock VerticalAlignment="Center">Fonts:</TextBlock>
            <ComboBox Width="200px" Margin="5,15,15,15"></ComboBox>
            <Button x:Name="generate" Margin="5">GENERATE WaveShare C++</Button>
        </StackPanel>
    </Grid>
</Window>
